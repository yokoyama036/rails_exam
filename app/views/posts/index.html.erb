<h1>投稿一覧</h1>

<p><%= notice %></p>

<table>
  <% @posts.each do |post| %>
  <tr>
    <td><%= post.content %></td>
    <td><%= link_to '投稿確認', post_path(post.id) %></td>
    <td><%= link_to "編集", edit_post_path(post.id) %></td>
    <td><%= link_to '削除', post_path(post.id), method: :delete,data: { confirm: '本当に削除しますか？' } %></td>
  </tr>
  <% end %>
</table>

<%= link_to '新しく投稿する', new_post_path %>

